<%
--------------------------------------------------------------------------------
-- Package page template
--
-- This file is part of LoveLetter project.
--------------------------------------------------------------------------------
%>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>Reference</title>
    <link rel="stylesheet" href="<%=luadoc.doclet.LoveLetter.link('luadoc.css', 'files/'..package_doc.name)%>" type="text/css" />
	<!--meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/-->
</head>

<body>
<div id="container">

<div id="main">

<div id="navigation">
<%=luadoc.doclet.LoveLetter.include("menu.lp", { doc=doc, package_doc=package_doc })%>

</div> <!-- id="navigation" -->

<div id="content">

<h1>Package <code><%=package_doc.name%></code></h1>

<%if package_doc.description then%>
<p><%=package_doc.description%></p>
<%end%>
<%if package_doc.author then%>
<p><b><%= #package_doc.author>1 and "Authors" or "Author" %>:</b>
<table class="authors_list">
<%for _, author in ipairs(package_doc.author) do%>
	<tr><td class="name"><%= author %></td></tr>
<%end%>
</table>
</p>
<%end%>
<%if package_doc.copyright then%>
<p>Copyright &copy;<%=package_doc.copyright%></p>
<%end%>
<%if package_doc.release then%>
<p><small><b>Release:</b> <%=package_doc.release%></small></p>
<%end%>

<h2>Classes</h2>
<table class="class_list">
<% for _, sub_doc in pairs(package_doc.files) do %>
	<% for _, class_name in ipairs(sub_doc.classes) do %>
		<% local class_data = sub_doc.classes[class_name] %>
		<tr>
		<td class="name" nowrap><a href="../classes/<%=class_name%>.html"><%=class_name%></a></td>
		<td class="summary"><%=class_data.summary%></td>
		</tr>
	<% end %>
<% end %>
</table>

<h2>Functions</h2>
<table class="function_list">
<% for _, sub_doc in pairs(package_doc.files) do %>
	<% for _, func_name in ipairs(sub_doc.functions) do %>
		<% local func_data = sub_doc.functions[func_name] %>
		<tr>
		<td class="name" nowrap><%=func_data.private and "local " or ""%><a href="#<%=func_name%>"><%=func_name%></a>&nbsp;(<%=llDoclet:tableConcat(func_data.param, ", ")%>)</td>
		<td class="summary"><%=func_data.summary%></td>
		</tr>
	<% end %>
<% end %>
</table>

<h2>Tables</h2>
<table class="table_list">
<% for _, sub_doc in pairs(package_doc.files) do %>
	<%for _, tab_name in ipairs(sub_doc.tables) do%>
		<tr>
		<td class="name" nowrap><a href="#<%=tab_name%>"><%=tab_name%></a></td>
		<td class="summary"><%=sub_doc.tables[tab_name].summary%></td>
		</tr>
	<%end%>
<%end%>
</table>


<br/>
<br/>


<%for _, sub_doc in pairs(package_doc.files) do%>
	<%if #sub_doc.functions > 0 then%>
		<h2><a name="functions"></a>Functions</h2>
		<dl class="function">
		<%for _, func_name in ipairs(sub_doc.functions) do%>
			<%=luadoc.doclet.LoveLetter.include("function.lp", { doc=doc, package_doc=sub_doc, func=sub_doc.functions[func_name] })%>
		<%end%>
		</dl>
	<%end%>
<%end%>



<h2><a name="tables"></a>Tables</h2>
<dl class="table">
<%for _, sub_doc in pairs(package_doc.files) do%>
	<%for _, tab_name in ipairs(sub_doc.tables) do%>
		<%=luadoc.doclet.LoveLetter.include("table.lp", { tab=sub_doc.tables[tab_name] })%>
	<%end%>
<%end%>
</dl>




</div> <!-- id="content" -->

</div> <!-- id="main" -->

<div id="about">
	<p>
		<a href="http://validator.w3.org/check?uri=referer">Valid XHTML</a> |
		Generated by <a href="http://www.github.com/an00bis/LoveLetter">LoveLetter</a>
	</p>
</div> <!-- id="about" -->

</div> <!-- id="container" -->
</body>
</html>
